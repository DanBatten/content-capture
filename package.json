{
  "name": "content-capture",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "migrate:notion": "npx tsx scripts/migrate-notion.ts",
    "retry:failed": "GOOGLE_APPLICATION_CREDENTIALS='.gcs/content-capture-key.json' npx tsx scripts/retry-failed.ts",
    "status": "GOOGLE_APPLICATION_CREDENTIALS='.gcs/content-capture-key.json' npx tsx scripts/check-status.ts"
  },
  "devDependencies": {
    "@google-cloud/pubsub": "^5.2.0",
    "@google-cloud/storage": "^7.18.0",
    "@notionhq/client": "^2.2.15",
    "@supabase/supabase-js": "^2.86.0",
    "apify-client": "^2.20.0",
    "dotenv": "^17.2.3",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=20"
  }
}
